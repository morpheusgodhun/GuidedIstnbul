@using Dto.ApiWebDtos.ApiToWebDtos.Profile;
@model GetChangePasswordDto
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="bg-white shadow rounded my-5">
                <div class="row mt-120 mb-120">
                    <div class="col-md-12 pe-0">
                        <div class="form-left h-100 py-5 px-5 booking-form-box">
                            <fieldset>
                                <div class="form-card">
                                    <div class="mb-5">
                                        <h1 class="text-center">@Helpers.Wcv(Model.ConstantValues,"ChangePasswordTitle") </h1>
                                    </div>
                                    <form method="post" id="msform" class="banner-form">
                                        <input hidden name="UserID" value="@Model.UserID" />
                                        @* <input hidden name="UserID" value="@Model.E" /> *@
                                        <div class="search-box-single destination-box postition-relative">
                                            <div class="searchbox-icon">
                                                <i class="fas fa-key"></i>
                                            </div>
                                            <div class="searchbox-input">
                                                <input required placeholder="@Helpers.Wcv(Model.ConstantValues,"ChangePasswordPasswordPlaceholder")" type="password" name="Password" />
                                            </div>
                                        </div>
                                        <div class="search-box-single destination-box postition-relative">
                                            <div class="searchbox-icon">
                                                <i class="fas fa-key"></i>
                                            </div>
                                            <div class="searchbox-input">
                                                <input required placeholder="@Helpers.Wcv(Model.ConstantValues,"ChangePasswordNewPasswordPlaceholder")" type="password"
                                                       name="NewPassword" />
                                            </div>
                                        </div>
                                        @{

                                            if (ViewBag.PasswordsNotMatchError != null)
                                            {
                                                <div class="col-sm-5">
                                                    <small id="passwordError" class="text-danger">
                                                        @ViewBag.PasswordsNotMatchError
                                                    </small>
                                                </div>
                                            }
                                        }

                                        <div class="search-box-single destination-box postition-relative">
                                            <div class="searchbox-icon">
                                                <i class="fas fa-key"></i>
                                            </div>
                                            <div class="searchbox-input">
                                                <input placeholder="@Helpers.Wcv(Model.ConstantValues,"ChangePasswordNewPasswordAgainPlaceholder")" type="password"
                                                       name="NewPasswordAgain" />
                                            </div>
                                        </div>
                                        @{

                                            if (ViewBag.PasswordsNotMatchError != null)
                                            {
                                                <div class="col-sm-5">
                                                    <small id="passwordError" class="text-danger">
                                                        @ViewBag.PasswordsNotMatchError
                                                    </small>
                                                </div>
                                            }
                                        }
                                        <div class="col-lg-12">
                                            <button type="submit"
                                                    class="eg-btn btn--primary btn--lg submit-btn float-end">
                                                @Helpers.Wcv(Model.ConstantValues,"ChangePasswordChangeButton")
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </fieldset>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

