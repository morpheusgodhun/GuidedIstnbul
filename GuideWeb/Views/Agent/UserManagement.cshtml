}

<div class="feature-section2 mt-60 mb-120">
    <div class="row mb-60">
        <div class="col text-center">
            <h1>@Helpers.Wcv(Model.ConstantValues, "UserManagement.Title")</h1>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
