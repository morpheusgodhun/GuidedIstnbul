@using Dto.ApiPanelDtos.SystemOptionDtos;
@model LanguageEditSystemOptionDto
@{
    ViewData["Title"] = "LanguageEditSystemOption";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="float-start">
            <a href="/SystemOption/Index">System Option List</a>
            > Edit System Option
        </h4>
        <h4 class="float-end">@Model.LanguageName</h4>
    </div>
    <div class="card-body">
        <!--Edit System Options Management Start-->
        <!-- start page title -->
        <form method="post">
            <input hidden asp-for="SystemOptionLanguageItemID" />
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 mb-3 mr-1">
                    <label for="system-option-name" class="form-label fw-bold">
                        System Option
                        Name:<span class="text-danger fw-bold">*</span>
                    </label>
                    <input required type="text" asp-for="SystemOptionName" class="form-control">
                </div>
            </div>
            <div class="row">
                <!-- Button -->
                <div class="col-sm-12 col-md-12 col-lg-12 mb-3 mr-1 d-flex flex-row-reverse bd-highlight">
                    <button type="submit"
                            class="btn btn-dark rounded-pill px-5 mt-3">
                        SAVE
                    </button>
                </div>
            </div>
        </form>
        <!--Edit System Options Management End-->

    </div>
</div>

