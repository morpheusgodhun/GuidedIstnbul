@using Dto.ApiPanelDtos.ConstantValueDtos;
@using Dto.ApiPanelDtos.LanguageDtos;
@model (List<ConstantValueListDto> DataModel, List<LanguageListDto> LangaugeModel)
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h4 class="card-header">Constant Value List</h4>
    <div class="card-body">
        <div class="clearfix">
            <div class="row justify-content-end">
                <div class="mb-4">
                    <a class="float-end btn btn-secondary" href="/ConstantValue/AddConstantValue">
                        Add Constant Value
                    </a>
                </div>
            </div>
        </div>
        <table id="scroll-horizontal-datatable" class="table w-100 nowrap table-striped">
            <thead>
                <tr>
                    <th style="width: 10%;">Update</th>
                    <th style="width: 20%;">Key</th>
                    <th style="width: 70%;">Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var constantValue in Model.DataModel)
                {
                    <tr>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary" data-bs-toggle="dropdown" aria-expanded="false">Update</button>
@*                                <button type="button"
                                        class="btn btn-primary dropdown-toggle dropdown-toggle-split"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                </button>*@
                                <ul class="dropdown-menu">
                                    @foreach (var language in Model.LangaugeModel)
                                    {
                                        <li>
                                            <a class="dropdown-item"  href="/ConstantValue/LanguageEditConstantValue/@constantValue.ConstantValueID/@language.LanguageID"> @language.LanguageName</a>
                                        </li>
                                    }
                                    
                                </ul>
                            </div>
                        </td>
                        <td>
                            @constantValue.Key
                        </td>
                        <th>@constantValue.Value</th>
                    </tr>
                }
                


            </tbody>

        </table>

    </div>
</div>

