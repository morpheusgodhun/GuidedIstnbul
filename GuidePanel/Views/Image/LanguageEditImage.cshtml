@using Dto.ApiPanelDtos.ImageManagementDtos;
@model LanguageEditImageDto
@{
    ViewData["Title"] = "LanguageEditImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="float-start">Edit Image</h4>
        <h4 class="float-end">@Model.LanguageName</h4>
    </div>

    <div class="card-body">
        <p class="card-text">
            Asterisk (<span class="text-danger fw-bold">*</span>) required
            fields
        </p>
        <!-- Edit Image Management Start -->
        <!-- start page title -->
        <form method="post" enctype="multipart/form-data">
            <input hidden asp-for="ImageLanguageItemID" />
            <div class="row">
                <!-- PAge Name -->
                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label for="page" class="form-label fw-bold">Page Name:</label>
                    <input type="text" class="form-control" asp-for="Name" readonly >
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label for="page" class="form-label fw-bold">Display Name:</label>
                    <input type="text" class="form-control" asp-for="DisplayName">
                </div>
            </div>

            <div class="row">
                <!-- Button -->
                <div class="col-sm-12 col-md-12 col-lg-12 mb-3 mr-1 d-flex flex-row-reverse bd-highlight">
                    <button type="submit"
                            class="btn btn-dark rounded-pill px-5 mt-3">
                        SAVE
                    </button>
                </div>
            </div>
        </form>
        <!-- Edit Image Management End -->

    </div>
</div>

