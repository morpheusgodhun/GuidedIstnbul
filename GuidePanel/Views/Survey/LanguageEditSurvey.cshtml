@using Dto.ApiPanelDtos.SurveyDtos;
@model LanguageEditSurveyDto
@{
    ViewData["Title"] = "LanguageEditSurvey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="float-start">
            <a href="/Survey/Index">Survey List</a>
            > Edit Survey
        </h4>
        <h4 class="float-end">@Model.LanguageName</h4>
    </div>
    <div class="card-body">
        <p class="card-text">
            Asterisk (<span class="text-danger fw-bold">*</span>) required
            fields
        </p>
        <!---Edit Survey Start-->
        <!-- start page title -->
        <form method="post">
            <input hidden asp-for="SurveyLanguageItemID" />
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 mb-3 mr-1">
                    <label for="survey-question" class="form-label fw-bold">
                        Survey
                        Question:<span class="text-danger fw-bold">*</span>
                    </label>
                    <textarea asp-for="Question" rows="2"
                              class="form-control col-md-6"> </textarea>
                </div>
                <!-- Button -->
                <div class="col-sm-12 mb-3 mr-1 d-flex flex-row-reverse bd-highlight">
                    <button type="submit"
                            class="btn btn-dark rounded-pill px-5 mt-3">
                        SAVE
                    </button>
                </div>
            </div>
        </form>
        <!---Edit Survey End-->
    </div>
</div>

