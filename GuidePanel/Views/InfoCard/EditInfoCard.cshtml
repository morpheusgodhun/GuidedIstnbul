@using Dto.ApiPanelDtos.InfoCardDtos;
@using GuidePanel.Helpers;
@model EditInfoCardDto
@{
    ViewData["Title"] = "EditInfoCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h4 class="card-header">
        <a href="/InfoCard/Index">Card List</a>
        > Edit Information Card > @Model.Title
        
    </h4>
    <div class="card-body">
        <p class="card-text">
            Asterisk (<span class="text-danger fw-bold">*</span>) required
            fields
        </p>
        <!--Edit Tag Start-->
        <!-- start page title -->
        <form method="post" enctype="multipart/form-data">
            <input hidden asp-for="InfoCardID"/>
            <input hidden asp-for="IconPath" />
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label for="tagicon" class="form-label fw-bold">
                        Icon:<span class="text-danger fw-bold">*</span>
                    </label>
                    <button type="button" style="border:none" data-bs-toggle="modal"
                            data-bs-target="#current-icon" class="float-end">
                        Current Icon
                    </button>
                    <!-- current icon Modal-->
                    <div class="modal fade" id="current-icon" tabindex="-1" aria-labelledby="current-iconLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Current Icon</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <img src="@Resource.ImagePath/@Model.IconPath" class="w-100">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- current icon Modal-->
                    <input class="form-control" type="file" name="Icon"
                           placeholder="Dosya seçilmedi.">
                </div>

            </div>
            <div class="row">
                <!-- Button -->
                <div class="col-sm-12 col-md-12 col-lg-12 mb-3 mr-1 d-flex flex-row-reverse bd-highlight">
                    <button type="submit"
                            class="btn btn-dark rounded-pill px-5 mt-3">
                        SAVE
                    </button>
                </div>
            </div>
        </form>
        <!--Edit Tag End-->

    </div>
</div>

