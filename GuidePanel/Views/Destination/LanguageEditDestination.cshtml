@using Dto.ApiPanelDtos.DestinationDtos;
@model LanguageEditDestinationDto
@{
    ViewData["Title"] = "LanguageEditDestination";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="float-start">
            <a href="/Destination/Index">Destination List</a>
            > Edit Destination > @Model.DestinationName
        </h4>
        <h4 class="float-end">@Model.LanguageName</h4>
    </div>
    <div class="card-body">
        <p class="card-text">
            Asterisk (<span class="text-danger fw-bold">*</span>) required
            fields
        </p>
        <!--Edit Destinational Start-->
        <!-- start page title -->
        <form method="post">
            <input hidden asp-for="DestinationLanguageItemID" />
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 mb-3 mr-1">
                    <label for="destination-name" class="form-label fw-bold">
                        Destination Name:
                        <span class="text-danger fw-bold">*</span>
                    </label>
                    <input type="text" asp-for="DestinationName" class="form-control">
                </div>
            </div>
            <div class="row">
                <!-- Button -->
                <div class="col-sm-12 col-md-12 col-lg-12 mb-3 mr-1 d-flex flex-row-reverse bd-highlight">
                    <button type="submit"
                            class="btn btn-dark rounded-pill px-5 mt-3">
                        SAVE
                    </button>
                </div>
            </div>
        </form>
        <!--Edit Destinational End-->

    </div>
</div>

