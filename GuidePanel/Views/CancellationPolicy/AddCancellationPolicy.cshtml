@using Dto.ApiPanelDtos.CancellationPolicyDtos;
@model AddCancellationPolicyDto
@{
    ViewData["Title"] = "AddCancellationPolicy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h4 class="card-header">
        <a href="/CancellationPolicy/Index">Policy List</a>
        > Add Cancellation Policy</h4>
    <div class="card-body">
        <p class="card-text">
            Asterisk (<span class="text-danger fw-bold">*</span>) required
            fields
        </p>
        <!---Add Cancellation Policy Management Start-->
        <!-- start page title -->
        <form method="post">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label for="Name" class="form-label fw-bold">
                        Cancellation Policy Name<span class="text-danger fw-bold">*</span>
                    </label>
                    <input type="text" asp-for="Name" class="form-control">
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label for="order" class="form-label fw-bold">
                        How many hours before the reservation will the return button be active?<span class="text-danger fw-bold">*</span>
                    </label>
                    <input type="number" asp-for="UncancellableHour" class="form-control">
                </div>

                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-12 mb-3 mr-1">
                        <label for="" class="form-label fw-bold">
                            Cancellation Policy Text:<span class="text-danger fw-bold">*</span>
                        </label>
                        <textarea required asp-for="Content" id="editor1" rows="4" cols="4"></textarea>
                        <script>
                            CKEDITOR.replace('editor1');
                        </script>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Button -->
                <div class="col-sm-12 col-md-12 col-lg-12 mb-3 mr-1 d-flex flex-row-reverse bd-highlight">
                    <button type="submit"
                            class="btn btn-dark rounded-pill px-5 mt-3">
                        ADD
                    </button>
                </div>
            </div>
        </form>
        <!---Cancellation Policy Management End-->
    </div>
</div>

