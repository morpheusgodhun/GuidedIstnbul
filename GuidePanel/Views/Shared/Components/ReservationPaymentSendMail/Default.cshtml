@using Dto.ApiPanelDtos.ReservationPaymentDtos;
@model ReservationPaymentSendMailDto
@{
}

<form asp-controller="Reservation" action="SendPaymentLink" method="post">

    <div class="modal-body">
        <h4 class="text-center">Rezervasyondan Kalan Borç : @ViewBag.CurrentDebt $</h4>
        <div class="row m-2">

            <div class="col-sm-3 my-2">
                <label for=""
                       class="form-label fw-bold">Amount</label>
            </div>
            <div class="col-sm-9 my-2">
                <input type="text" id="amountInput" asp-for="Amount" class="form-control">
            </div>
        </div>
        <div class="row m-2">

            <div class="col-sm-3 my-2">
                <label for=""
                       class="form-label fw-bold">Email</label>
            </div>
            <div class="col-sm-9 my-2">
                <input type="email" id="emailInput" asp-for="Email" class="form-control">
            </div>
        </div>
        <div class="row m-2">

            <div class="col-sm-3 my-2">
                <label for=""
                       class="form-label fw-bold">Validity Period(Default 2 Day)</label>
            </div>
            <div class="col-sm-9 my-2">
                <input type="number" id="validatyInput" asp-for="ValidatyPeriod" class="form-control">
            </div>
        </div>
        <div class="text-center mt-3">
            <button type="submit" id="sendPayment"
                    class="btn btn-secondary float-end">
                Send
                Payment Link
            </button>
        </div>
    </div>

</form>
