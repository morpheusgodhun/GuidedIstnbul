@using Dto.ApiPanelDtos.ProductDtos.TourDtos;
@model LanguageEditTourDto
@{
    ViewData["Title"] = "LanguageEditTour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">

        <h4 class="float-start">
            <a href="/Tour/Index">Tour List</a>
            > Edit Tour
        </h4>
        <h4 class="float-end">@Model.LanguageName</h4>
    </div>
    <div class="card-body">
        <p class="card-text">
            Asterisk (<span class="text-danger fw-bold">*</span>) required
            fields
        </p>
        <!--Edit Tour Start-->
        <!-- start page title -->
        <form method="post">
            <input hidden asp-for="ProductLanguageID" />
            <input hidden asp-for="TourLanguageID" />
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label for="tour-title" class="form-label fw-bold">
                        Tour Name:<span class="text-danger fw-bold">*</span>
                    </label>
                    <input readonly asp-for="ProductName" type="text" id="tour-name" class="form-control">
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label for="tour-title" class="form-label fw-bold">
                        Display Name:<span class="text-danger fw-bold">*</span>
                    </label>
                    <input type="text" asp-for=DisplayName id="tour-title" class="form-control">
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label for="tour-title" class="form-label fw-bold">
                        Slug:<span class="text-danger fw-bold">*</span>
                    </label>
                    <input type="text" asp-for=Slug id="tour-title" class="form-control">
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label for="tour-title" class="form-label fw-bold">Duration Text</label>
                    <input asp-for="DurationText" type="text" id="tour-title" class="form-control">
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label for="tour-title" class="form-label fw-bold">
                        Tour Starting Point
                    </label>
                    <input type="text" asp-for=StartPoint id="tour-title" class="form-control">
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label for="tour-title" class="form-label fw-bold">
                        Tour Ending Point
                    </label>
                    <input type="text" asp-for=EndPoint id="tour-title" class="form-control">
                </div>

                <div class="col-sm-12 col-md-6 col-lg-6 mb-3 mr-1">
                    <label asp-for="SitemapInclude" class="form-label fw-bold d-block">
                        Sitemap Include:<span class="text-danger fw-bold">*</span>
                    </label>
                    <input asp-for="SitemapInclude" class="form-check-input" type="checkbox" value="true"
                           id="SitemapInclude">

                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 mb-3 mr-1">
                    <label for="" class="form-label fw-bold">
                        Content:<span class="text-danger fw-bold">*</span>
                    </label>
                    <textarea asp-for="Content" id="editor1" rows="4" cols="4"></textarea>
                    <script>
                        CKEDITOR.replace('editor1');
                    </script>
                </div>
            </div>

            <div class="clear-fix">
                <button type="submit" class="btn btn-primary float-end">SAVE</button>
            </div>
        </form>
        <!--Edit Tour End-->
    </div>
</div>

