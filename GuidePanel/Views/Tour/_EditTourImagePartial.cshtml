@using Dto.ApiPanelDtos.ProductDtos.GeneralDtos;
@model EditProductImageDto

<div id="editImageModal" class="modal fade" tabindex="-1" role="dialog"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                Edit Image
            </div>
            <div class="modal-body p-2">
                <form method="post" action="/Tour/EditTourImage" enctype="multipart/form-data">
                    <input id="productIdInput" hidden name="ProductID" />
                    <input hidden asp-for="ImagePath" />
                    <input hidden asp-for="ProductImageID" />
                    <div class="col-sm-12 col-md-12  mb-3 mr-1">
                        <label for="option-name" class="form-label fw-bold">
                            Order:<span class="text-danger fw-bold">*</span>
                        </label>
                        <input required type="number" class="form-control" asp-for="Order" id="option-name">
                    </div>
                    <div class="col-sm-12 col-md-12  mb-3 mr-1">
                        <label for="option-name" class="form-label fw-bold">
                            Image(1903x650)lass="text-danger fw-bold">*</span>
                        </label>
                        <input required type="file" class="form-control" name="Image" id="option-name">
                    </div>
                    <div class="row">
                        <!-- Button -->
                        <div class="col-sm-12 mb-3 mr-1 d-flex flex-row-reverse bd-highlight">
                            <button type="submit" class="btn btn-dark rounded-pill px-5 mt-3">
                                SAVE
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

